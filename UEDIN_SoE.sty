%% Title page

\makeatletter
\renewcommand{\maketitle}{%
  \begin{titlepage}
    \singlespacing
    \begin{center}
      \vspace{-2cm}
      % \includegraphics[width=15 cm]{Figures/University_of_Edinburgh-Logo.wine.png} \vfill
      \includegraphics[width=15 cm]{Figures/2_AUEB-white-HR.jpg}
      \vspace{-7cm}
      {\Large{\degreetext}} \vfill
      \vspace{3cm}
      {\huge\textbf{\@title}\par}\vfill
      by \vfill
      \vspace{-3cm}
      {\Large{\@author}\par} \vfill
      \@date  \vfill
      \vspace{-2cm}
    \end{center}
  \end{titlepage}
  \if@twoside
    \thispagestyle{empty}
    \cleardoublepage
  \else
    \addtocounter{page}{1}
  \fi
}
\makeatother


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Declaration page

\makeatletter
\newenvironment{declaration}[1]
    {
       \chapter*{Declaration}
       \addcontentsline{toc}{chapter}{Declaration}
        
        #1\\[1ex]
        
        \vspace{0.5em}
    
        \begin{flushright}
          {\large \textit{\@author}}
        \end{flushright}
    
        \vspace{0.5em}
    
        \noindent Word Count: \quickwordcount{thesis}
    
        \vfill
    
        \noindent This thesis was conducted under the supervision of \supervisor.
    
        \vspace{2cm}
    }
\makeatother


